{
    "name": "existenznl/permcheck",
    "description": "PermCheck is a tool to validate the executable bit of files in a PHP project",
    "license": "MIT",
    "require": {
        "symfony/console": "^2.1|^3.0",
        "symfony/dependency-injection": "^2.1|^3.0"
    },
    "authors": [
        {
            "name": "Stefan van Essen",
            "email": "git@stefan-van-essen.nl"
        }
    ],
    "autoload": {
        "psr-4": {
            "eXistenZNL\\PermCheck\\": "src/"
        }
    },
    "bin": [
        "bin/permcheck"
    ],
    "require-dev": {
        "phpunit/phpunit": "^4.8|^5.0",
        "squizlabs/php_codesniffer": "^2.5.0",
        "phing/phing": "^2.13.0",
        "mockery/mockery": "^0.9.4"
    }
